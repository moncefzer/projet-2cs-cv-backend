<!-- Dynamic Title Component -->
<!-- This component renders an HTML title element with a dynamic color class -->
<h2 class="title <%= color %>">
  <!-- Internal styling for color classes -->
  <style>
    .red {
      color: red;
    }
    .blue {
      color: #294aec;
    }
    .green {
      color: green;
    }
    .yellow {
      color: yellow;
    }
  </style>

  <!-- Display the title using the provided 'title' variable -->
  <%= title %>
</h2>
